                                <td style="padding: 0 75px;">@item.Key</td>
                                <td style="padding: 0 75px;">@item.Value</td>
                                <td style="padding: 0 75px;">@(LootList.FirstOrDefault(x => x.Name == item.Key)?.DropChance.ToString("F2"))%</td>
